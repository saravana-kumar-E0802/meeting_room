<% @page_title = "User List"%>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= link_to "<< Back to Menu", {:controller=>"access", :action=>"index"}, :class=>"back-link"%>

<div>
	
	<h2> Users List </h2>

	<%= link_to "Add New User", {:controller=>"users", :action =>"new"}%>

	<table>
		<th> First Name </th>
		<th> Last Name </th>
		<th> Email </th>
		<th> Password </th>
		<th> Permissions </th>
		<% @users.each do |user|%>
			<tr>
				<td><%= user.first_name%></td>
				<td><%= user.last_name%></td>
				<td><%= user.email%></td>
				<td><%= user.password_digest%></td>
				<td><%= user.permissions%></td>
				<td><%= link_to "Edit", {:controller=>"users", :action=>"edit", :id => user.id}, :class => "action edit" %></td>
				<td><%= link_to "Delete", {:controller=>"users", :action=>"delete", :id => user.id}, :class => "action delete" %></td>
			</tr>
		<%end%>
	</table>

</div>