<% @page_title = "Login"%>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %>
 
<div class ="login">
	<%= form_tag(:action =>"attempt_login") do%>
	<table>
		<tr>
			<td><%= label_tag(:user_id ,"Email Id" )%></td>
			<td><%= text_field_tag :user_id%></td>
		</tr>
		<tr>
			<td><%= label_tag :password %></td>
			<td><%= password_field_tag :password%></td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td><%= submit_tag :Login%></td>
		</tr>
	</table>
	<%end%>
</div>